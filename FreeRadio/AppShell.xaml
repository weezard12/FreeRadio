<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FreeRadio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FreeRadio"
    xmlns:views="clr-namespace:FreeRadio.Views"
    Title="Free Radio"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Radio 1" Icon="iconblank.png">
            <ShellContent ContentTemplate="{DataTemplate views:RadioPage}" />
        </Tab>
        <Tab Title="Radio 2" Icon="iconblank.png">
            <ShellContent ContentTemplate="{DataTemplate views:RadioPage}" />
        </Tab>
    </TabBar>
</Shell>
