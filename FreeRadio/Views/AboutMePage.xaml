    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AboutMePage">
    <ContentPage.Background>
        <LinearGradientBrush>

            <GradientStop Offset="0.0" Color="#80CBC4" />

            <GradientStop Offset="1.0" Color="#B4EBE6" />

        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout>
